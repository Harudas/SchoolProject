
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8">
    <link rel='stylesheet' href='https://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.css'>
    <style>
        body {
             color: white;
        }

        .Absolute-Center {
            margin: auto;
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
        }

            .Absolute-Center.is-Responsive {
                width: 50%;
                height: 50%;
                min-width: 200px;
                max-width: 400px;
                padding: 40px;
            }

        #heading {
            margin: auto;
            margin-bottom: 10px;
            width: 170px;
            height: 30px;
            color: black;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="Absolute-Center is-Responsive">
                <div id="heading">電子化流程與設計</div>
                <div class="col-sm-12 col-md-10 col-md-offset-1">
                    <form style="color:black;" method="post" action="">
                        <div>
                            <span style="color:red">@ViewBag.Msg</span>
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-addon">帳號</span>
                            <input type="text" class="form-control" id="Account" name="account" placeholder="輸入帳號" value="">
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-addon">密碼</span>
                            <input type="password" class="form-control" id="Password" name="password" placeholder="輸入密碼" value="">
                        </div>
                        <center>
                            <button type="submit" class="btn btn-primary">登入</button>&nbsp;
                            <button type="reset" class="btn btn-primary">清除</button>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




